{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 600,
    "background": null, 
    "config": {
        "view": {
        "stroke": null 
        }
    }, 
    "title": {
        "text": "How many hours need to be worked to afford a year's worth of toothpaste?",
        "fontSize": 29,  
        "fontWeight": "normal",
        "font": "Times New Roman", 
        "fontStyle": "italic",
        "anchor": "middle"  
      },
    "projection": {"type": "equalEarth"},
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/afia-farzana167/Code/refs/heads/main/Data/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#A9CCCF",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/afia-farzana167/Code/refs/heads/main/Data/labour_cost_toothpaste.csv"
            },
            "mark": {
                "type": "circle", "tooltip": {"content": "data"}
            },
            "encoding": {
                "latitude": {"field": "latitude", "type": "quantitative"},
                "longitude": {"field": "longitude", "type": "quantitative"},
                "size": {
                    "field": "FactValueNumeric",
                    "type": "quantitative", 
                    "scale": {
                        "range": [50, 500]  
                    }
                }, 
                "color": {
                    "field": "FactValueNumeric",
                    "type": "quantitative",
                    "scale": {
                        "range": ["#f7c6b2", "#CFB1A9", "#cf9671"] 
                    },
                    "title": "Days of Work to Buy Toothpaste", 
                    "legend": null
                },                
                "tooltip": [
                    {"field": "Location"},
                    {"field": "FactValueNumeric", "title": "Average Cost (USD)"}
                ]
            }
        }
    ]
}