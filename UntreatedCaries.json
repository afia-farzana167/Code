{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": null, 
  "description": "The following chart presents the portion of untreater caries in each continent",
  "width": 350, 
  "height": 300, 
  "config": {
      "view": {
      "stroke": null 
      }
  }, 
  "title": {
      "text": "Untreated Caries Around the World (2021)", 
      "fontSize": 24,  
      "fontWeight": "normal",
      "font": "Times New Roman", 
      "fontStyle": "italic",
      "anchor": "middle"
    },
  "data": {
    "values": [
      {"Continent": "Africa", "Number Affected": 1427}, 
      {"Continent": "Americas", "Number Affected": 1101},
      {"Continent": "Eastern Mediterranean", "Number Affected": 726},
      {"Continent": "Europe", "Number Affected": 1831}, 
      {"Continent": "Southeast Asia", "Number Affected": 316}
    ]
  },
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"}
  },{
    "mark": {"type": "text", "radiusOffset": 15},
    "encoding": {
      "text": {"field": "Number Affected", "type": "quantitative"}
    }
  }],
  "encoding": {
    "theta": {"field": "Number Affected", "type": "quantitative", "stack": true},
    "radius": {"field": "Number Affected", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}},
    "color": {
      "field": "Continent", 
      "type": "nominal", 
    "scale": {"range": ["#1f77b4", "#2ca02c", "#fffdd0", "#17becf", "#bcbd22"]}}, 
    "tooltip": [
      {"field": "Number Affected", "type": "quantitative"}
    ]
  }
}
